@model RegisterViewModel;

<link rel="stylesheet" href="~/css/RGsite.css" asp-append-version="true" />

<div class="root-container">
    <!-- Columna de formulario (izquierda) -->
    <div class="form-column">
        <div class="form-container">
            <div class="logo-container">
                <img src="~/images/caobalogo.png" alt="Logo Caoba" />
            </div>

            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label asp-for="Nombre" class="form-label">Nombre Completo</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre completo" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Usuario" class="form-label">Usuario</label>
                        <input asp-for="Usuario" class="form-control" placeholder="Nombre usuario" />
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rol" class="form-label">Rol</label>
                        <select asp-for="Rol" class="form-control" asp-items="Html.GetEnumSelectList<caobaModeloFabricacion.Models.UserRole>()">
                            <option value="">Seleccionar</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Registrar</button>

                <div class="text-center">
                    <p>¿Ya tienes cuenta? <a asp-controller="Auth" asp-action="Login">Iniciar Sesión</a></p>
                </div>
            </form>
        </div>
    </div>

    <!-- Columna de imagen (derecha) -->
    <div class="image-column">
        <img src="~/imagesAuth/RegistroImagen.jpg" alt="Registro Image" class="login-image">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}