@model caobaModeloFabricacion.Models.OrdenProduccion

<form id="formEliminar" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Ordenid" />

    <div class="text-center p-4">
        <i class="fas fa-exclamation-triangle text-danger fs-3 mb-3"></i>
        <h5 class="fw-bold">¿Estás seguro?</h5>
        <p class="text-muted">
            Esta acción eliminará la orden <strong>@Model.Producto?.Nombre</strong> y todos sus datos relacionados.
        </p>

        <div class="d-flex justify-content-center mt-4">
            <button type="button" class="btn btn-light me-3" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-danger px-4">Eliminar</button>
        </div>
    </div>
</form>
